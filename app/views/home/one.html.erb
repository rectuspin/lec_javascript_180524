<style type= "text/css">
    header{
        height: 50px;
        width: 100%;
        background-color : blue;
        
        position: fixed;
        transition: 0.5s;
    }
    
    body{
        height: 1000vh;
    }
</style>



<script>
$(document).ready(function() {
  $(window).scroll(function() {
    if ($(this).scrollTop() > 0) {
      $('header').css('opacity', 0.3);
    } else {
      $('header').css('opacity', 1);
    }
  });
});
</script>













